<Window x:Class="PDFSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFSplitter"
        mc:Ignorable="d"
        Title="PDF Splitter" Height="223" Width="632">
    <Grid HorizontalAlignment="Left" Width="645" Height="223">
        <TextBox x:Name="SearchExpr" HorizontalAlignment="Left" Margin="209,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="405" Height="20"/>
        <Button x:Name="FileChooseBtn" Content="Choose File" HorizontalAlignment="Right" Margin="0,40,500,0" VerticalAlignment="Top" Click="FileChooseBtn_Click"/>
        <TextBox x:Name="FileChosen" HorizontalAlignment="Left" Margin="209,40,0,0" Text="None" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" Height="20" IsEnabled="False"/>
        <Button x:Name="GenerateBtn" Content="Generate" HorizontalAlignment="Right" Margin="0,140,513,0" VerticalAlignment="Top" Click="GenerateBtn_Click"/>
        <Label Content="Regular Expression" HorizontalAlignment="Left" Margin="74,89,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
